{
    "files.autoSave": "afterDelay",
    "cSpell.words": [
        "amsmath",
        "amssymb",
        "amsthm",
        "biber",
        "biblatex",
        "booktabs",
        "chsh",
        "devcontainers",
        "hyperref",
        "latexindent",
        "latexmk",
        "libfile",
        "libyaml",
        "Lipschitz",
        "mhutchie",
        "NOPASSWD",
        "synctex",
        "texlive"
    ],
    "[latex]": {
        "editor.formatOnSave": true
    },
    "latex-workshop.latex.rootFile.doNotPrompt": false,
    "latex-workshop.latex.outDir": "./out",
    "latex-workshop.view.pdf.viewer": "tab",
    // latexindent를 포맷터로 사용
    "latex-workshop.formatting.latex": "latexindent",

    // clean 명령어 정의
    "latex-workshop.latex.clean.method": "command",
    "latex-workshop.latex.clean.command": "latexmk",
    "latex-workshop.latex.clean.args": [
        "-c",
        "-outdir=%OUTDIR%",
        "%DOC%"
    ],

    // xelatex를 기본 빌드 레시피로 사용
    "latex-workshop.latex.recipe.default": "pdflatex",
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex",
            "tools": [
                "pdflatexmk"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdflatex",
                "-outdir=%OUTDIR%",
                "-shell-escape",
                "%DOC%"
            ]
        },
    ]
}