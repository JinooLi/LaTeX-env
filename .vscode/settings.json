{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // LaTeX 파일에 대해 저장 시 자동 포맷팅 활성화
    "[latex]": {
        "editor.formatOnSave": true
    },
    //// code spell checker 설정 ===============
    "cSpell.words": [
        "amsmath",
        "amssymb",
        "amsthm",
        "biber",
        "biblatex",
        "booktabs",
        "chsh",
        "devcontainers",
        "hyperref",
        "latexindent",
        "latexmk",
        "libfile",
        "libyaml",
        "Lipschitz",
        "mhutchie",
        "NOPASSWD",
        "synctex",
        "texlive"
    ],
    //// LaTeX Workshop 설정 ===============
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.error.show": false,
    "latex-workshop.latex.rootFile.doNotPrompt": false,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/out/%RELATIVE_DIR%",
    // clean 명령어 정의
    "latex-workshop.latex.clean.method": "command",
    "latex-workshop.latex.clean.command": "latexmk",
    "latex-workshop.latex.clean.args": [
        "-c",
        "-outdir=%OUTDIR%",
        "%DOC%"
    ],
    // xelatex를 기본 빌드 레시피로 사용
    "latex-workshop.latex.recipe.default": "pdflatex",
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex",
            "tools": [
                "pdflatexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdflatex",
                "-outdir=%OUTDIR%",
                "-shell-escape",
                "%DOC%"
            ]
        }
    ],
    // latexindent를 포맷터로 사용
    "latex-workshop.formatting.latex": "latexindent",
    // latexindent args 설정: 기본 설정과 거의 동일하지만, 출력 디렉토리를
    // %OUTDIR%로 지정하여 로그 파일이 프로젝트 디렉토리에 남지 않도록 함
    "latex-workshop.formatting.latexindent.args": [
        "-c",
        "%OUTDIR%/",
        "%TMPFILE%",
        "-y=defaultIndent: '%INDENT%'"
    ],
    //// TODO Tree 설정 ===============
    "todo-tree.tree.scanMode": "workspace",
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|%|\\\\|\\})\\s*($TAGS)",
    "todo-tree.ripgrep.ripgrepArgs": "--no-ignore", // .gitignore을 무시하도록 설정
    "todo-tree.filtering.excludeGlobs": [
        "**/out/**",
        "**/.vscode/**",
    ],
    "todo-tree.filtering.includeGlobs": [
        "**/*.tex",
        "**/*.bib",
        "**/*.cls",
        "**/*.sty"
    ],
}